<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.log_list.LogListActivity">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pgb_log_list"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:translationZ="10dp"/>

    <androidx.appcompat.widget.Toolbar
        android:translationZ="0dp"
        android:id="@+id/toolbar_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundColorCustom"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Log List" />

    <Spinner
        app:layout_constraintTop_toBottomOf="@id/toolbar_log"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:id="@+id/sp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense this month"
        app:layout_constraintEnd_toStartOf="@id/tv_expense_log"
        app:layout_constraintTop_toTopOf="@id/tv_expense_log"
        app:layout_constraintBottom_toBottomOf="@id/tv_expense_log"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_expense_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/teal_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_log"
        tools:text="Rp.500.000" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sp_time"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>